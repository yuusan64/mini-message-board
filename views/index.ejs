<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Message Board</h1>
        <a href="/new" class="button">New Message</a>
        <ul>
            <% messages.forEach((message, index) => { %>
            <li>
                <div>
                    <strong><%= message.user %>:</strong> <%= message.text %> 
                    <em>(<%= message.added.toLocaleString() %>)</em>
                </div>
                <a href="/message/<%= index %>" class="button">Open</a>
            </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
